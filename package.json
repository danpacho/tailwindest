{
    "name": "tailwindest",
    "version": "1.0.0",
    "description": "Think diffrent, tailwind. Writing classnames like CSS in JS.",
    "author": "danpacho",
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/danpacho/tailwindest#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/danpacho/tailwindest"
    },
    "bugs": {
        "url": "https://github.com/danpacho/tailwindest/issues"
    },
    "keywords": [
        "tailwind",
        "css in js format",
        "near zero bundle size",
        "just classnames"
    ],
    "scripts": {
        "build": "pnpm clean && rollup -c && rimraf dist:watch",
        "build:watch": "rollup -cw",
        "clean": "rimraf {dist,dist:watch}",
        "bench": "node ./js/benchmark/bench.js",
        "prettier": "prettier '{packages,js}/**/*.{ts,js,md}' --check",
        "prettier:fix": "prettier '{packages,js}/**/*.{ts,js,md}' --write",
        "eslint": "eslint '{packages,js}/**/*.{ts,js}'",
        "eslint:fix": "eslint --fix '{packages,js}**/*.{ts,js}'",
        "test": "jest",
        "test:dev": "jest --watch --no-coverage",
        "test:coverage:watch": "jest --watch",
        "class": "node ./js/scripts/extract && prettier './packages/types/tailwind.nested/**.ts' --write",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/tailwindest.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "default": "./dist/index.js",
            "types": "./dist/tailwindest.d.ts",
            "module": "./dist/index.js"
        }
    },
    "devDependencies": {
        "@jest/globals": "^29.3.1",
        "@rollup/plugin-typescript": "^8.5.0",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "chalk": "^5.0.1",
        "esbuild": "^0.15.9",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^27.1.6",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.1",
        "jest": "^29.3.1",
        "lint-staged": "^13.0.3",
        "maxmin": "^4.0.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.79.1",
        "rollup-plugin-dts": "4.2.3",
        "rollup-plugin-esbuild": "^4.10.1",
        "rollup-plugin-terser": "^7.0.2",
        "ts-expect": "^1.3.0",
        "ts-jest": "^29.0.3",
        "typescript": "^4.8.3"
    }
}
