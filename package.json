{
    "name": "tailwindest",
    "version": "1.0.0",
    "description": "Think diffrent, tailwind. Writing classnames like CSS in JS.",
    "author": "danpacho",
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/danpacho/tailwindest#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/danpacho/tailwindest"
    },
    "bugs": {
        "url": "https://github.com/danpacho/tailwindest/issues"
    },
    "keywords": [
        "tailwind",
        "css in js format",
        "zero bundle size",
        "just classnames"
    ],
    "scripts": {
        "build": "tsc && vite build",
        "prettier": "prettier '**/*.{ts,md}' --check",
        "prettier:fix": "prettier '**/*.{ts,md}' --write",
        "eslint": "eslint '*.ts'",
        "eslint:fix": "eslint --fix '*.ts'"
    },
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/tailwindest.es.js",
    "module": "./dist/tailwindest.es.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/tailwindest.umd.js",
            "import": "./dist/tailwindest.es.js"
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1",
        "typescript": "^4.6.4",
        "vite": "^3.0.0",
        "vite-plugin-dts": "^1.4.1"
    }
}
