{
    "name": "create-tailwind-type",
    "version": "1.0.0",
    "description": "Type generator for tailwindcss",
    "type": "module",
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "build:fast": "tsup --no-dts",
        "format": "prettier --write \"./{src,tests}/**/*\"",
        "dev": "pnpm build:fast --sourcemap --clean=false --watch",
        "test": "pnpm test",
        "lint:ts": "tsc --noEmit",
        "prepare": "node ./src/site_extractor/build.mjs"
    },
    "publishConfig": {
        "access": "public"
    },
    "bin": {
        "create-tailwind-type": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "keywords": [],
    "private": false,
    "author": "danpacho",
    "license": "MIT",
    "dependencies": {
        "@tailwindcss/node": "^4.0.8",
        "boxen": "^8.0.1",
        "commander": "^13.1.0",
        "glob": "^11.0.1",
        "jsdom": "^26.0.0",
        "lightningcss": "^1.29.1",
        "postcss": "^8.5.3",
        "prettier": "^3.5.2",
        "prettier-plugin-jsdoc": "^1.3.2",
        "tailwindcss": "^4.0.8"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.7",
        "chalk": "^5.4.1"
    },
    "peerDependencies": {
        "@tailwindcss/node": "^4.0.6",
        "lightningcss": "^1.29.1",
        "prettier": "^3.5.0",
        "prettier-plugin-jsdoc": "^1.3.2",
        "tailwindcss": "^4.0.6"
    }
}
